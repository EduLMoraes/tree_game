<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quest"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/verso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/iniciais_questao3_verso"
        android:visibility="invisible"
        tools:layout_editor_absoluteY="360dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="189dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ei_questao7_sem_erros" />

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="300dp"
                    android:layout_height="189dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ei_questao7_com_erros" />

                <TextView
                    android:id="@+id/error04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_marginEnd="136dp"
                    android:layout_marginBottom="138dp"
                    android:text="X"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/error01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_marginEnd="55dp"
                    android:layout_marginBottom="39dp"
                    android:text="X"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/error02"
                    android:layout_width="22dp"
                    android:layout_height="40dp"
                    android:layout_alignEnd="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_marginEnd="149dp"
                    android:layout_marginBottom="67dp"
                    android:text="X"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/error03"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_alignEnd="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_marginEnd="11dp"
                    android:layout_marginBottom="77dp"
                    android:text="X"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>