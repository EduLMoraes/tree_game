<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quest"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/verso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/iniciais_questao3_verso"
        android:visibility="invisible"
        tools:layout_editor_absoluteY="360dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="As praças urbanas são ambientes de conservação de espécies vegetais e animais, além de nos proporcionar redução da sensação de calor, também são locais para desempenho de atividades físicas e lazer, e embelezam as cidades. Ache os sete erros encontrados na figura 2 em relação à figura 1, clicando em cima dos mesmos. "
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/iniciais_questao7_sem_erros_2" />

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|top">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="317dp"
                    android:layout_height="189dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iniciais_questao7_com_erros_2" />

                <TextView
                    android:id="@+id/error6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_marginEnd="103dp"
                    android:layout_marginBottom="59dp"
                    android:text="X"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/error3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_marginEnd="191dp"
                    android:layout_marginBottom="111dp"
                    android:text="X"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/error4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_marginEnd="255dp"
                    android:layout_marginBottom="138dp"
                    android:text="X"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/error5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_marginEnd="61dp"
                    android:layout_marginBottom="91dp"
                    android:text="X"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/error01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_marginEnd="216dp"
                    android:layout_marginBottom="128dp"
                    android:text="X"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/error02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_marginEnd="205dp"
                    android:layout_marginBottom="167dp"
                    android:text="X"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/error2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageView2"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_marginEnd="190dp"
                    android:layout_marginBottom="21dp"
                    android:text="X"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>