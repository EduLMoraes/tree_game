<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral30"
    android:backgroundTint="@color/material_dynamic_neutral_variant30">

    <ImageView
        android:id="@+id/verso"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/iniciais_questao3_verso"
        android:contentDescription="@string/fab_content_description"
        android:visibility="invisible"
        app:layout_constrainedHeight="false"
        app:layout_marginBaseline="0dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A8A8A8"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/col2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fig3"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/iniciais_questao1"
                    android:clickable="true"
                    android:contentDescription="@string/fab_content_description" />

                <ImageView
                    android:id="@+id/fig4"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/iniciais_questao1"
                    android:clickable="true"
                    android:contentDescription="@string/fab_content_description" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/col3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fig5"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/iniciais_questao2_maca"
                    android:clickable="true"
                    android:contentDescription="@string/fab_content_description" />

                <ImageView
                    android:id="@+id/fig6"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/iniciais_questao2_maca"
                    android:clickable="true"
                    android:contentDescription="@string/fab_content_description" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/col4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fig7"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/iniciais_questao2_folha1"
                    android:clickable="true"
                    android:contentDescription="@string/fab_content_description" />

                <ImageView
                    android:id="@+id/fig8"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/iniciais_questao2_folha1"
                    android:clickable="true"
                    android:contentDescription="@string/fab_content_description" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/col5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fig9"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/iniciais_questao2_tronco"
                    android:clickable="true"
                    android:contentDescription="@string/action_settings" />

                <ImageView
                    android:id="@+id/fig10"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/iniciais_questao2_tronco"
                    android:clickable="true"
                    android:contentDescription="@string/fab_content_description" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>