<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quest"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="As árvores são divididas em partes. O tronco possibilita a sua fixação no solo. As folhas produzem o seu alimento por meio da fotossíntese. O fruto protege a semente e serve de alimento para animais. Agora clique com o dedo na parte da árvore e no seu nome correspondente:"
            android:textAlignment="textStart"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="372dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iniciais_questao2_maca" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="372dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iniciais_questao2_folha1" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="372dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iniciais_questao2_tronco" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:id="@+id/r3"
                    android:layout_width="306dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/retangulo" />

                <ImageView
                    android:id="@+id/r2"
                    android:layout_width="263dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/r3"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/retangulo" />

                <ImageView
                    android:id="@+id/r1"
                    android:layout_width="265dp"
                    android:layout_height="50dp"
                    android:layout_above="@+id/r2"
                    android:layout_alignParentTop="false"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/retangulo" />

                <TextView
                    android:id="@+id/folha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/square1"
                    android:layout_alignEnd="@+id/r1"
                    android:layout_alignBottom="@+id/r1"
                    android:layout_marginTop="-11dp"
                    android:layout_marginEnd="38dp"
                    android:layout_marginBottom="-3dp"
                    android:text="FOLHA"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/tronco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/r2"
                    android:layout_alignEnd="@id/r2"
                    android:layout_marginTop="-5dp"
                    android:layout_marginEnd="24dp"
                    android:text="TRONCO"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/fruto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/r3"
                    android:layout_alignEnd="@+id/r3"
                    android:layout_marginTop="-6dp"
                    android:layout_marginEnd="62dp"
                    android:text="FRUTO"
                    android:textSize="40sp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>