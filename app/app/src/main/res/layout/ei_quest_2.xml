<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral30"
    android:backgroundTint="@color/material_dynamic_neutral_variant30">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="72dp">

        <ImageView
            android:id="@+id/arvore_ei_2"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/iniciais_questao1" />

        <ImageView
            android:id="@+id/maca_ei_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="92dp"
            android:layout_toEndOf="@+id/arvore_ei_2"
            app:srcCompat="@drawable/iniciais_questao2_maca" />

        <ImageView
            android:id="@+id/folha_ei_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/maca_ei_2"
            android:layout_marginStart="90dp"
            android:layout_marginTop="44dp"
            android:layout_toEndOf="@+id/arvore_ei_2"
            app:srcCompat="@drawable/iniciais_questao2_folha1" />

        <ImageView
            android:id="@+id/tronco_ei_2"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_below="@+id/folha_ei_2"
            android:layout_marginStart="68dp"
            android:layout_marginTop="42dp"
            android:layout_toEndOf="@+id/arvore_ei_2"
            app:srcCompat="@drawable/iniciais_questao2_tronco" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/maca_ei_2"
            android:layout_marginStart="-51dp"
            android:layout_marginBottom="18dp"
            android:layout_toEndOf="@+id/arvore_ei_2"
            app:srcCompat="@drawable/flecha" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/maca_ei_2"
            android:layout_marginStart="-71dp"
            android:layout_marginBottom="-183dp"
            android:layout_toEndOf="@+id/arvore_ei_2"
            app:srcCompat="@drawable/flecha" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/maca_ei_2"
            android:layout_marginStart="-48dp"
            android:layout_marginBottom="-80dp"
            android:layout_toEndOf="@+id/arvore_ei_2"
            app:srcCompat="@drawable/flecha" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>