<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quest"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muitos frutos sÃ£o nutritivos e servem de alimento. Toque na imagem do fruto e de seu nome correspondente logo em seguida para formar os pares corretos: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_vertical">

            <ImageView
                android:id="@+id/abacate"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="44dp"
                app:srcCompat="@drawable/iniciais_questao12_abacate" />

            <ImageView
                android:id="@+id/coco"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="44dp"
                android:layout_toEndOf="@id/uva"
                app:srcCompat="@drawable/iniciais_questao12_coco" />

            <ImageView
                android:id="@+id/limao"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="44dp"
                android:layout_toEndOf="@id/coco"
                app:srcCompat="@drawable/iniciais_questao12_uva_2" />

            <ImageView
                android:id="@+id/uva"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="44dp"
                android:layout_toEndOf="@id/abacate"
                app:srcCompat="@drawable/iniciais_questao12_uva" />

            <ImageView
                android:id="@+id/r1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_below="@id/abacate"
                android:layout_marginTop="-1dp"
                app:srcCompat="@drawable/retangulo" />

            <ImageView
                android:id="@+id/r2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_below="@id/coco"
                android:layout_marginTop="-1dp"
                android:layout_toEndOf="@id/r1"
                app:srcCompat="@drawable/retangulo" />

            <ImageView
                android:id="@+id/r3"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_below="@id/limao"
                android:layout_marginTop="-1dp"
                android:layout_toEndOf="@id/r2"
                app:srcCompat="@drawable/retangulo" />

            <ImageView
                android:id="@+id/r4"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_below="@id/uva"
                android:layout_marginTop="-1dp"
                android:layout_toEndOf="@id/r3"
                app:srcCompat="@drawable/retangulo" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_below="@id/r1"
                android:layout_marginTop="-100dp"
                android:layout_marginEnd="-150dp"
                android:layout_toStartOf="@id/r1"
                android:gravity="center"
                android:text="COCO"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_below="@id/r1"
                android:layout_marginTop="-101dp"
                android:layout_marginEnd="-151dp"
                android:layout_toStartOf="@id/r2"
                android:gravity="center"
                android:text="LIMAO"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_below="@id/r1"
                android:layout_marginTop="-100dp"
                android:layout_marginEnd="-151dp"
                android:layout_toStartOf="@id/r4"
                android:gravity="center"
                android:text="UVA"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_below="@id/r1"
                android:layout_marginTop="-100dp"
                android:layout_marginEnd="-152dp"
                android:layout_toStartOf="@id/r3"
                android:gravity="center"
                android:text="ABACATE"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>