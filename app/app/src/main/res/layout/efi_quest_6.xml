<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/verso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/iniciais_questao3_verso"
        android:visibility="invisible"
        tools:layout_editor_absoluteY="360dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="79dp">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A capivara é um animal nativo do Bioma Pampa, sendo muito importante a sua preservação. Arraste o dedo na tela e ajude a capivara a cruzar o labirinto para chegar até o capim, que servirá de seu alimento:"
            android:textSize="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <com.example.apptreegame.initial_fundamental.Quest6
            android:id="@+id/quest6_view"
            android:layout_width="match_parent"
            android:layout_height="235dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>