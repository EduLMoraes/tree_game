<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quest"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preservar as plantas permite que as mesmas tenham maior sobrevivência no ambiente. Na imagem, podemos ver pessoas cuidando de espécies vegetais e existem maçãs que foram escondidas. Encontre as maçãs clicando em cima das mesmas:"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="345dp"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="309dp"
                android:layout_height="190dp"
                app:srcCompat="@drawable/iniciais_questao10" />

            <ImageView
                android:id="@+id/a"
                android:layout_width="7dp"
                android:layout_height="6dp"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="263dp"
                android:layout_marginBottom="128dp"
                app:srcCompat="@drawable/iniciais_questao10_a" />

            <ImageView
                android:id="@+id/b"
                android:layout_width="7dp"
                android:layout_height="6dp"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="285dp"
                android:layout_marginBottom="26dp"
                app:srcCompat="@drawable/iniciais_questao10_b" />

            <ImageView
                android:id="@+id/c"
                android:layout_width="7dp"
                android:layout_height="6dp"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="232dp"
                android:layout_marginBottom="63dp"
                app:srcCompat="@drawable/iniciais_questao10_c" />

            <ImageView
                android:id="@+id/d"
                android:layout_width="7dp"
                android:layout_height="6dp"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="170dp"
                android:layout_marginBottom="32dp"
                app:srcCompat="@drawable/iniciais_questao10_d" />

            <ImageView
                android:id="@+id/e"
                android:layout_width="7dp"
                android:layout_height="6dp"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="76dp"
                android:layout_marginBottom="25dp"
                app:srcCompat="@drawable/iniciais_questao10_e" />

            <ImageView
                android:id="@+id/f"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="114dp"
                android:layout_marginBottom="121dp"
                app:srcCompat="@drawable/iniciais_questao10_f" />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>